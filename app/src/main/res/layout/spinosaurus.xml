

    <!-- A DrawerLayout is intended to be used as the top-level content view using match_parent for both width and height to consume the full space available. -->
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools" android:id="@+id/drawer_layout"
android:layout_width="match_parent" android:layout_height="match_parent"
tools:context=".history" android:background="#F87A17">

<!-- As the main content view, the view below consumes the entire
     space available using match_parent in both dimensions. -->
<FrameLayout android:id="@+id/container" android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
            android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
            android:background="#F87A17"
            >
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="35sp"
                android:text="Spinosaurus"
                android:gravity="center"
                android:id="@+id/textView2"
                android:paddingBottom="15dp"
                android:textStyle="bold"/>
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/spinosaurus"
                android:id="@+id/spinosaurus"
                android:layout_below="@+id/textView2"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/stext1"
                android:layout_below="@+id/spinosaurus"
                android:textSize="15sp"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:text="Spinosaurus means Spiny Lizard"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/stext2"
                android:layout_below="@+id/stext1"
                android:textSize="15sp"
                android:paddingBottom="15dp"
                android:text="Diet: Carnivore"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/stext3"
                android:layout_below="@+id/stext2"
                android:textSize="15sp"
                android:paddingBottom="15dp"
                android:text="Lived During: Mid Cretaceous 100-93 million years ago"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/stext4"
                android:layout_below="@+id/stext3"
                android:textSize="15sp"
                android:paddingBottom="15dp"
                android:text="Found in Egypt, Morocco, and Tunisia"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/stext5"
                android:layout_below="@+id/stext4"
                android:textSize="15sp"
                android:paddingBottom="15dp"
                android:text="Size: 50-55 feet long, 15 feet tall"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/stext6"
                android:layout_below="@+id/stext5"
                android:textSize="15sp"
                android:paddingBottom="15dp"
                android:text="Spinosaurus was the largest carnivorous dinosaur that ever lived. The sail on its back probably helped to regulate body temperature."/>
        </RelativeLayout>
    </ScrollView>



</FrameLayout>


</android.support.v4.widget.DrawerLayout>