
<!-- A DrawerLayout is intended to be used as the top-level content view using match_parent for both width and height to consume the full space available. -->
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/drawer_layout"
    android:layout_width="match_parent" android:layout_height="match_parent"
    tools:context=".History" android:background="#F87A17">

    <!-- As the main content view, the view below consumes the entire
         space available using match_parent in both dimensions. -->
    <FrameLayout android:id="@+id/container" android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >
            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
                android:background="#F87A17"
                >
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textSize="35sp"
                    android:text="Juravenator"
                    android:gravity="center"
                    android:id="@+id/textView2"
                    android:paddingBottom="15dp"
                    android:textStyle="bold"/>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/juravenator"
                    android:id="@+id/gallimimus"
                    android:layout_below="@+id/textView2"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:paddingBottom="15dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:id="@+id/atext1"
                    android:layout_below="@+id/gallimimus"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:text="Juravenator means Jura hunter (named after the region of the Bavarian Mountains)."/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/atext2"
                    android:layout_below="@+id/atext1"
                    android:textSize="15sp"
                    android:paddingBottom="15dp"
                    android:text="Diet: Carnivore"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/atext3"
                    android:layout_below="@+id/atext2"
                    android:textSize="15sp"
                    android:paddingBottom="15dp"
                    android:text="Lived During: Late Jurassic Period about 154 to 151 million years ago."
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/atext4"
                    android:layout_below="@+id/atext3"
                    android:textSize="15sp"
                    android:paddingBottom="15dp"
                    android:text="Found in Germany."/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/atext5"
                    android:layout_below="@+id/atext4"
                    android:textSize="15sp"
                    android:paddingBottom="15dp"
                    android:text="Size: 2.5 feet (75cm) in length."
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/atext6"
                    android:layout_below="@+id/atext5"
                    android:textSize="15sp"
                    android:paddingBottom="15dp"
                    android:text="Fossilized impressions have been found of Juravenator with dinosaur scales as well as simple feathers."
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/atext7"
                    android:layout_below="@+id/atext6"
                    android:textSize="15sp"
                    android:paddingBottom="15dp"
                    android:text="Juravenator is known from a single juvenile specimen."
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/atext8"
                    android:layout_below="@+id/atext7"
                    android:textSize="15sp"
                    android:paddingBottom="15dp"
                    android:text="Juravenator is believed to have been nocturnal due to comparisons of bones in the eyes to moderne birds and reptiles."
                    />


            </RelativeLayout>
        </ScrollView>



    </FrameLayout>

</androidx.drawerlayout.widget.DrawerLayout>