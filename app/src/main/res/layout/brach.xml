

<!-- A DrawerLayout is intended to be used as the top-level content view using match_parent for both width and height to consume the full space available. -->
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools" android:id="@+id/drawer_layout"
android:layout_width="match_parent" android:layout_height="match_parent"
tools:context=".history">

<!-- As the main content view, the view below consumes the entire
     space available using match_parent in both dimensions. -->
<FrameLayout android:id="@+id/container" android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
            android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
            android:background="#F87A17"
            >
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="35sp"
                android:text="Brachiosaurus"
                android:gravity="center"
                android:id="@+id/textView2"
                android:paddingBottom="15dp"
                android:textStyle="bold"/>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/brach"
                android:id="@+id/brach"
                android:layout_below="@+id/textView2"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Brachiosaurus means Arm Lizard"
                android:textSize="15sp"
                android:layout_below="@+id/brach"
                android:id="@+id/btext1"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btext1"
                android:id="@+id/btext2"
                android:paddingBottom="15dp"
                android:text="Diet: Herbivore"
                android:textSize="15sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btext3"
                android:layout_below="@+id/btext2"
                android:paddingBottom="15dp"
                android:textSize="15sp"
                android:text="Lived During: Late Jurassic to Middle Cretaceous 153-113 million years ago."/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btext4"
                android:layout_below="@+id/btext3"
                android:textSize="15sp"
                android:paddingBottom="15dp"
                android:text="Found in North America, Algeria, Portugal, and Tanzania."/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btext5"
                android:layout_below="@+id/btext4"
                android:textSize="15sp"
                android:paddingBottom="15dp"
                android:text="Size: 80 feet long and about 45 feet tall"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btext6"
                android:layout_below="@+id/btext5"
                android:textSize="15sp"
                android:paddingBottom="15dp"
                android:text="Brachiosaurus was a sauropod which meant that it stood on all four legs."
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btext7"
                android:layout_below="@+id/btext6"
                android:textSize="15sp"
                android:paddingBottom="15dp"
                android:text="Brachiosaurus was discovered in 1900 by Elmer S. Riggs, in the Grand River Canyon of western Colorado."/>

        </RelativeLayout>
    </ScrollView>


</FrameLayout>



</android.support.v4.widget.DrawerLayout>