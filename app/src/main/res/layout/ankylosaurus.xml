


    <!-- A DrawerLayout is intended to be used as the top-level content view using match_parent for both width and height to consume the full space available. -->
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools" android:id="@+id/drawer_layout"
android:layout_width="match_parent" android:layout_height="match_parent"
tools:context=".History" android:background="#F87A17">

<!-- As the main content view, the view below consumes the entire
     space available using match_parent in both dimensions. -->
<FrameLayout android:id="@+id/container" android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
            android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
            android:background="#F87A17"
            >
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="35sp"
                android:text="Ankylosaurus"
                android:gravity="center"
                android:id="@+id/textView2"
                android:paddingBottom="15dp"
                android:textStyle="bold"/>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/ankylosaurus"
                android:id="@+id/ankylo"
                android:layout_below="@+id/textView2"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ankylosaurus means Stiffened Lizard"
                android:textSize="15sp"
                android:layout_below="@+id/ankylo"
                android:id="@+id/text1"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text2"
                android:layout_below="@+id/text1"
                android:textSize="15sp"
                android:paddingBottom="15dp"
                android:text="Diet: Herbivore"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text3"
                android:layout_below="@+id/text2"
                android:textSize="15sp"
                android:paddingBottom="15dp"
                android:text="Lived During: Late Cretaceous 68-65 million years ago"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text4"
                android:layout_below="@+id/text3"
                android:textSize="15sp"
                android:paddingBottom="15dp"
                android:text="Found in Western North America"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text5"
                android:layout_below="@+id/text4"
                android:textSize="15sp"
                android:paddingBottom="15dp"
                android:text="Size: 20-30 feet long, 5-9 feet tall"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text6"
                android:layout_below="@+id/text5"
                android:textSize="15sp"
                android:paddingBottom="15dp"
                android:text="Ankylosaurus was the most famous of the armored dinosaurs.  It had tough armor that covered most of its body."/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text7"
                android:layout_below="@+id/text6"
                android:textSize="15sp"
                android:paddingBottom="15dp"
                android:text="Ankylosaurus was discovered in 1906 by Peter Kaisen."/>


        </RelativeLayout>
    </ScrollView>

</FrameLayout>



</android.support.v4.widget.DrawerLayout>